<!-- app/views/games/new.html.erb -->
<div class="container text-center mt-5">
  <h1 class="mb-4">Longest Word Game</h1>

  <p class="lead">Utilisez ces lettres pour former le mot le plus long possible :</p>
  <h2 class="mb-4">
    <%= @letters.join(' ') %>
  </h2>

  <form action="<%= score_path %>" method="post" data-turbo="false" class="mb-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join(' ') %>

    <div class="mb-3">
      <input type="text" name="word" class="form-control" placeholder="Tapez votre mot ici" required>
    </div>

    <button type="submit" class="btn btn-primary">Valider</button>
  </form>
</div>
